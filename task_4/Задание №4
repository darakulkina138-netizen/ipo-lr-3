import math
# Запрашиваем коэффициенты у пользователя
a = float(input("Введите коэффициент a: "))
b = float(input("Введите коэффициент b: "))
c = float(input("Введите коэффициент c: "))
print(f"Уравнение: {a}x² + {b}x + {c} = 0")
# Проверяем, является ли уравнение квадратным
if a == 0:
    print("Ошибка: коэффициент a не может быть равен 0 для квадратного уравнения!")
else:
    # Вычисляем дискриминант
    discriminant = b**2 - 4*a*c
    print(f"Дискриминант D = {discriminant}")
    # Анализируем дискриминант
    if discriminant > 0:
        # Два различных действительных корня
        x1 = (-b + math.sqrt(discriminant)) / (2*a)
        x2 = (-b - math.sqrt(discriminant)) / (2*a)
        print(f"Уравнение имеет два действительных корня:")
        print(f"x₁ = {x1:.2f}")
        print(f"x₂ = {x2:.2f}")
    elif discriminant == 0:
        # Один действительный корень (кратности 2)
        x = -b / (2*a)
        print(f"Уравнение имеет один действительный корень (кратности 2):")
        print(f"x = {x:.2f}")
    else:
        # Действительных корней нет
        print("Уравнение не имеет действительных корней.")
